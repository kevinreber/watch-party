{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["vite/client", "node"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": "./app",
    "paths": {
      "~/*": ["./*"],
      "@components": ["./components"],
      "@components/*": ["./components/*"],
      "@pages": ["./pages"],
      "@pages/*": ["./pages/*"],
      "@helpers": ["./helpers"],
      "@helpers/*": ["./helpers/*"],
      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"],
      "@hooks": ["./hooks"],
      "@hooks/*": ["./hooks/*"],
      "@api": ["./api"],
      "@api/*": ["./api/*"],
      "@context": ["./context"],
      "@context/*": ["./context/*"],
      "@types": ["./types"],
      "@types/*": ["./types/*"],
      "@socket-client": ["./socket-client"],
      "@socket-client/*": ["./socket-client/*"]
    }
  },
  "include": [
    ".react-router/types/**/*",
    "app/**/*",
    "app/**/*.ts",
    "app/**/*.tsx"
  ]
}
